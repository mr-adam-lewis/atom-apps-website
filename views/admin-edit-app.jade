extends admin-console

block admin
	script(src='../js/admin-edit-app.js')
	div.spacer-lg#edit-app-error
	form.form-horizontal#edit-app-form(enctype='multipart/form-data', method='post', action='../edit-app')
		div.container
			div.col-sm-12
				div.col-sm-12
					h3 App title
				div.col-sm-10
					input.form-control#edit-app-title(type='text', disabled='', name='title')
					input.form-control.hidden#edit-app-id(type='hidden', name='id')
				div.col-sm-2
					input.btn.btn-block.btn-info(type='submit', value='Submit App')
			div.col-sm-12
				div.col-sm-4
					div.column.inverse
						div#edit-app-icon-container
							label.control-label Current App Icon
							div.clear
							div.center.spacer-md
								img.app-profile-icon.admin-padded-icon#app-profile-icon
							div.clear
							label.control-label New App Icon (.png)
							input.form-control#edit-app-icon-field(type='file', name='icon', accept='image/png')
						label.control-label Average Review (number e.g 4.3)
						input.form-control#edit-app-review(type='text', name='review')
					div.column.light-grey
						p Other Graphic Assets
						label.control-label Home Page Carousel Image
						input.form-control#edit-app-carousel-field(type='file', name='carousel', accept='image/*')
				div.col-sm-8
					div.column.light-grey
						label.control-label Description
						textarea.form-control#edit-app-description(name='description', rows='12')
						label.control-label Features
						textarea.form-control#edit-app-features(name='features', rows='10')
						label.control-label Screenshots
						div.well.dark-grey#file-field-container
							a.btn.btn-success#add-screenshot-button Add Screenshot
							input.hidden#screenshotCount(type='hidden', name='screenshotCount')
							input.hidden#edit-remove-screenshots(type='hidden', name='removeScreenshots')
							input.hidden#edit-keep-screenshots(type='hidden', name='keepScreenshots')
							div.spacer-md#edit-app-screenshot-container
							div.clear.spacer-lg
						div.form-group.spacer-lg
							div.col-sm-3
								label.control-label Google Play
							div.col-sm-1
								input.form-control.toggle-disabled#googlePlayToggle(type='checkbox', data-toggle-disabled='googlePlayLink')
							div.col-sm-8
								input.form-control.disa#googlePlayLink(type='text', disabled='', name='googlePlayLink')
						div.form-group.spacer-lg
							div.col-sm-3
								label.control-label App Store
							div.col-sm-1
								input.form-control.toggle-disabled#appStoreToggle(type='checkbox', data-toggle-disabled='appStoreLink')
							div.col-sm-8
								input.form-control#appStoreLink(type='text', disabled='', name='appStoreLink')
						div.form-group.spacer-lg
							div.col-sm-3
								label.control-label Windows Store
							div.col-sm-1
								input.form-control.toggle-disabled#windowsStoreToggle(type='checkbox', data-toggle-disabled='windowsStoreLink')
							div.col-sm-8
								input.form-control#windowsStoreLink(type='text', disabled='', name='windowsStoreLink')
						div.form-group.spacer-lg
							div.col-sm-3
								label.control-label Amazon Store
							div.col-sm-1
								input.form-control.toggle-disabled#amazonStoreToggle(type='checkbox', data-toggle-disabled='amazonLink')
							div.col-sm-8
								input.form-control#amazonLink(type='text', disabled='', name='amazonLink')
						div.form-group.spacer-lg
							div.col-sm-3
								label.control-label Steam
							div.col-sm-1
								input.form-control.toggle-disabled#steamStoreToggle(type='checkbox', data-toggle-disabled='steamLink')
							div.col-sm-8
								input.form-control#steamLink(type='text', disabled='', name='steamLink')
